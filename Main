import SwiftUI

struct Meal: Identifiable {
    let id: Int
    let name: String
    let ingredients: [String]
    let instructions: String
    let photo: String
    let dietaryRestrictions: [String]
}

struct User {
    let id: Int
    let name: String
    let friends: [User]
    let meals: [Meal]
}

struct MealRow: View {
    let meal: Meal
    
    var body: some View {
        HStack {
            Image(meal.photo)
                .resizable()
                .frame(width: 50, height: 50)
            
            VStack(alignment: .leading) {
                Text(meal.name)
                    .font(.headline)
                
                Text(meal.ingredients.joined(separator: ", "))
                    .font(.subheadline)
                
                Text(meal.dietaryRestrictions.joined(separator: ", "))
                    .font(.caption)
            }
        }
    }
}

